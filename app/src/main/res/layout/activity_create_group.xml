<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".groups.CreateGroup">

    <TextView
        android:id="@+id/createCommunity"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:fontFamily="@font/allerta"
        android:text="Create a Community!"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="302dp"
        android:layout_height="195dp"
        app:layout_constraintBottom_toTopOf="@+id/commName"
        app:layout_constraintStart_toStartOf="@+id/createCommunity"
        app:layout_constraintTop_toBottomOf="@+id/createCommunity"
        app:srcCompat="@drawable/community" />

    <EditText
        android:id="@+id/commName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter Community Name"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/commName"
        app:layout_constraintTop_toBottomOf="@+id/commName" />



</androidx.constraintlayout.widget.ConstraintLayout>